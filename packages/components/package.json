{
  "name": "@fluentui-vue/components",
  "version": "2.0.0-rc.25",
  "main": "./dist/components.umd.js",
  "module": "./dist/components.mjs",
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "lib",
    "src",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist; rimraf lib; rimraf types",
    "build": "run-p build-only build:module",
    "build:module": "tsc -p tsconfig.module.json; tsc-alias -p tsconfig.module.json",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "peerDependencies": {
    "vue": "^3.2.47"
  },
  "dependencies": {
    "@fluentui-vue/file-type-icons": "*",
    "@fluentui-vue/hooks": "*",
    "@fluentui-vue/icons": "*",
    "@fluentui-vue/style-utilities": "*",
    "@fluentui-vue/theme": "*",
    "@fluentui-vue/utilities": "*",
    "@fluentui/date-time-utilities": "^8.5.13",
    "@fluentui/dom-utilities": "^2.2.11",
    "@fluentui/merge-styles": "^8.5.12",
    "@vueuse/core": "^10.4.1",
    "@vueuse/math": "^10.4.1",
    "shiki": "^0.14.4",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@fluentui/example-data": "^8.4.12",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^18.18.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/shared": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "esbuild": "^0.19.3",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.4",
    "sass": "^1.68.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-vue-markdown": "^0.23.8",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.14"
  }
